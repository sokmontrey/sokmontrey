---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
  <header class='h-[100vh] flex justify-center items-center'>
    <div class="grid grid-cols-3 grid-rows-2 justify-left " >
      <span class="letter">H</span>
      <span class="letter">E</span>
      <span class="letter">L</span>
      <span class="letter -translate-x-1 ">L</span>
      <span class="letter">O</span>
      <span class="letter">.</span>
    </div>
  </header>

  <hr class="w-[10%] mx-auto opacity-30 border-dashed" />

  <main class="p-10 pt-20 h-[100vh]">
    <div class="">
      <p class="serif-font text-[1.1rem] wrap w-[18rem] ">
        <span class="text-[4rem] float-left pr-4 leading-[0.9] ">I</span> am Sokmontrey, a math enthusiast who found out about computer science. I learn, built, and teach stuffs.
      </p>
    </div>

    <ul class="mt-5">
      <li class="serif-font text-[1.1rem] wrap w-[18rem]">
        <a class="pm-color hover:underline" 
          href="https://axia-article.netlify.app">
          Stuffs I Wrote (Axia-Articles)
        </a>
      </li>

      <li class="serif-font text-[1.1rem] wrap w-[18rem]">
        <a class="pm-color hover:underline" 
          href="https://github.com/sokmontrey">
          My Code Vault (GitHub)
        </a>
      </li>

      <li class="serif-font text-[1.1rem] wrap w-[18rem]">
        <a class="pm-color hover:underline" 
          href="https://behance.net/sokmontrey">
          Stuffs I draw, digitally (Behance)
        </a>
      </li>
    </ul>
  </main>
</BaseLayout>

<style> 
.letter {
  font-size: 7rem;
  font-family: var(--mono-font);
  line-height: 0.9;
  font-weight: bold;
}
</style>
