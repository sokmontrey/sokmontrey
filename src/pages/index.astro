---
import BaseLayout from '@/layouts/BaseLayout.astro';
import AsciiBackground from '@/components/AsciiBackground.svelte';
import Bio from '@/components/Bio.svelte';
---

<BaseLayout title="Home">
  <p class='text-[#ff5555] fixed top-0 left-0' >Site is under construction</p>

  <AsciiBackground client:only="svelte" />

  <header class='h-[100vh] w-[100vw] flex flex-col justify-center items-center relative z-10 '>
    <div class='pt-[20vh]'>
      <h1 class='flex text-[5.9rem] '>Hi,</h1>
      <Bio />
    </div>
    <a href="#intro" class='mt-[20vh] text-center text-[0.8rem] opacity-50 hover:opacity-100'>
      <p class='font-mono animate-bounce text-[1rem] '>scroll down</p>
      <i class="fa-solid fa-arrow-down animate-bounce"></i>
    </a>
  </header>

  <hr />

  <section id="intro" class='flex items-center justify-center h-[100vh] w-[100vw] relative '>
  </section>
</BaseLayout>
